{
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "sourceMap": true,
    "target": "ES2015",
    "module": "CommonJS",
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ES6", "DOM"],
    "moduleResolution": "node"
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"]
}
